                                <Font size="30.0" />
                            </font>
                            <graphic>
                                <MaterialDesignIconView fill="WHITE" glyphName="STORE" size="50" />
                            </graphic>
                        </JFXButton>
                        <JFXButton contentDisplay="TOP" maxHeight="Infinity" maxWidth="Infinity" onAction="#getProductsScene" ripplerFill="BLACK" styleClass="primary-button-3" text="Products" GridPane.columnIndex="4" GridPane.rowIndex="1">
