                                <Font size="30.0" />
                            </font>
                            <graphic>
                                <FontAwesomeIconView fill="WHITE" glyphName="PUZZLE_PIECE" size="50" />
                            </graphic>
                        </JFXButton>
                        <JFXButton contentDisplay="TOP" maxHeight="Infinity" maxWidth="Infinity" onAction="#getNewOrderScene" ripplerFill="#4b636e" styleClass="primary-button-2" text="New Order" GridPane.columnIndex="1">
