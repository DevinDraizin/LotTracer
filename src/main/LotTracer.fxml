                                <OctIconView fill="WHITE" glyphName="DIFF" size="50" />
                            </graphic>
                            <font>
                                <Font size="30.0" />
                            </font>
                        </JFXButton>
                        <JFXButton contentDisplay="TOP" maxHeight="Infinity" maxWidth="Infinity" ripplerFill="BLACK" style="-fx-background-color: white;" styleClass="primary-button-1" text=" " GridPane.columnIndex="2">
                            <font>
                                <Font size="30.0" />
                            </font>
                            <graphic>
                                <ImageView fitHeight="106.0" fitWidth="283.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/logo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </JFXButton>
                        <JFXButton contentDisplay="TOP" maxHeight="Infinity" maxWidth="Infinity" onAction="#getReturnItemsScene" ripplerFill="#ae52d4" styleClass="primary-button-4" text="Return Items" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <graphic>
                                <MaterialDesignIconView fill="WHITE" glyphName="KEYBOARD_RETURN" size="50" />
                            </graphic>
                            <font>
                                <Font size="30.0" />
                            </font>
                        </JFXButton>
