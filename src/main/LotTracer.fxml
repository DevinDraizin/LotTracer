                                <MaterialDesignIconView fill="WHITE" glyphName="DROPBOX" size="50" />
                            </graphic>
                            <font>
                                <Font size="30.0" />
                            </font>
                        </JFXButton>
                        <JFXButton contentDisplay="TOP" maxHeight="Infinity" maxWidth="Infinity" onAction="#getSearchScene" ripplerFill="#60ad5e" styleClass="primary-button-1" text="Search" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <graphic>
                                <OctIconView fill="WHITE" glyphName="EYE" size="50" />
                            </graphic>
                            <font>
                                <Font size="30.0" />
                            </font>
                        </JFXButton>
                    </children>
                </GridPane>
            </center>
        </BorderPane>
    </children>
