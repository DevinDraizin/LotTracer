                                <MaterialDesignIconView fill="WHITE" glyphName="TRUCK_DELIVERY" size="50" />
                            </graphic>
                            <font>
                                <Font size="30.0" />
                            </font>
                        </JFXButton>
                        <JFXButton contentDisplay="TOP" maxHeight="Infinity" maxWidth="Infinity" onAction="#getVendorsScene" ripplerFill="#60ad5e" styleClass="primary-button-1" text="Vendors" GridPane.columnIndex="4">
